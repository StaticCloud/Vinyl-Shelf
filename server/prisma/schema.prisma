// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int     @id @default(autoincrement())
  username         String  @db.VarChar(30)
  email            String  @unique @db.VarChar(50)
  password         String
  shelf_collection Shelf[]
  likes            Like[]
}

model Shelf {
  id             Int            @id @default(autoincrement())
  user           User           @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  user_id        Int
  name           String         @db.VarChar(30)
  likes          Like[]
  vinyl_on_shelf VinylOnShelf[]
}

model Vinyl {
  id             Int            @id @default(autoincrement())
  title          String
  discogs_id     Int
  cover_image    String
  vinyl_on_shelf VinylOnShelf[]
}

model Like {
  user     User  @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  shelf    Shelf @relation(fields: [shelf_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  user_id  Int
  shelf_id Int

  @@id([user_id, shelf_id])
}

model VinylOnShelf {
  shelf    Shelf @relation(fields: [shelf_id], references: [id])
  vinyl    Vinyl @relation(fields: [vinyl_id], references: [id])
  shelf_id Int
  vinyl_id Int

  @@id([vinyl_id, shelf_id])
}
